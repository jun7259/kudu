@using Kudu.Core.SourceControl
@using Kudu.Web.Models
@using Kudu.Web.Infrastructure

@model IEnumerable<string>

@{
    ViewBag.Title = "Applications";
}

<div class="well">
    <h1>Applications</h1>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                @using (Html.BeginForm("Delete", "Application", new { slug = item.GenerateSlug() }))
                {
                    <button type="submit" class="plain"><i class="glyphicon glyphicon-remove"></i></button>
                    <a href="@Url.RouteUrl("ApplicationDetails", new { slug = item })" class="site-item">
                        <i class="glyphicon glyphicon-th-list"></i>
                        @item
                    </a>
                }
            </li>
        }
    </ul>
</div>